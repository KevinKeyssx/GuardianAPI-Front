---
import ConfigIcon from '@/icons/ConfigIcon.astro';

export interface Props {
    columns: string[];
}

const { columns } = Astro.props;
---
<thead class="bg-dark-blue/70 font-orbitron">
    <tr>
        {columns.map((column) => (
            <th scope="col" class={`${column === 'Actions' ? 'sticky bg-dark-blue/90 backdrop-blur-sm shadow-[-4px_0_5px_rgba(0,0,0,0.3)] right-0 z-10 text-center flex justify-center px-4' : 'px-6'} py-3 text-left text-xs font-medium text-neon-blue uppercase tracking-wider`}>
                {column === 'Actions'
                    ? <ConfigIcon />
                    : column
                }
            </th>
        ))}
    </tr>
</thead>
