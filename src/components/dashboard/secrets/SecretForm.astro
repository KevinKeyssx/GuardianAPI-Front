---
import Modal from "@/components/shared/Modal.astro";

interface Secret {
    name: string;
    willExpireAt: string;
}

export interface Props {
    id: string;
    secret?: Secret;
}

const { id, secret } = Astro.props;
---
<div class="space-y-4">

    {secret && (
        <Modal id={id} type="secret" />
    )}

    <div class="flex flex-col">
        <label
            for="name"
            class="text-sm font-orbitron text-white mb-1"
        >
            Name
        </label>

        <input
            type="text"
            name="name"
            placeholder="Enter name"
            id="name"
            class="w-full px-4 py-2 bg-space-blue border border-neon-blue/30 rounded-lg focus:border-neon-blue focus:outline-none text-white"
            required
            value={secret?.name}
        />
    </div>

    <div class="flex flex-col">
        <label
            for="willExpireAt"
            class="text-sm font-orbitron text-white mb-1"
        >
            Will expire at
        </label>

        <input
            type="date"
            id="willExpireAt"
            class="w-full px-4 py-2 bg-space-blue border border-neon-blue/30 rounded-lg focus:border-neon-blue focus:outline-none text-white"
            required
            value={secret?.willExpireAt}
        />
    </div>
</div>