---
import CaretRightIcon from "@/icons/CaretRightIcon.astro";


export interface OverviewCardProps {
    title   : string;
    count   : number;
    link    : string;
    color   : 'blue' | 'green' | 'purple' | 'red';
}

const { title, count, link, color } = Astro.props;
---

<div class="bg-dark-blue/50 rounded-lg border border-neon-blue/20 p-6 hover:border-neon-blue/40 transition-colors duration-300">
    <div class="flex items-center">
        <div class={`p-3 rounded-full bg-${color}-900/30 text-neon-blue mr-4`}>
            <slot />
        </div>

        <div>
            <p class="text-gray-400 text-sm">{title}</p>

            <p class="text-3xl font-bold text-white">{count}</p>
        </div>
    </div>

    <div class="mt-4">
        <a href={link} class="text-neon-blue text-sm hover:underline flex items-center">
            View Details

            <CaretRightIcon />
        </a>
    </div>
</div>