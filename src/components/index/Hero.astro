---
import NeonButton       from "../buttons/NeonButton.astro";
import ShinyButton      from "../buttons/ShinyButton.astro";
import VariationCard    from "../cards/VariationCard.astro";
---

<section class="min-h-screen flex flex-col items-center justify-center px-4 py-24">
    <div class="text-center max-w-4xl mx-auto space-y-8 animate-fade-in relative">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-neon-blue/10 border border-neon-blue/20 text-neon-blue text-sm animate-pulse-slow">
            <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-neon-blue opacity-75"></span>

                <span class="relative inline-flex rounded-full h-2 w-2 bg-neon-blue"></span>
            </span>

            Now in public beta
        </div>

        <h1 class="text-5xl md:text-7xl font-orbitron font-bold bg-gradient-to-r from-neon-blue to-cyber-blue text-transparent bg-clip-text">
            Guardian<span class="text-white">Api</span>
        </h1>

        <div class="mx-auto flex justify-center">
            <VariationCard />
        </div>

        <p class="text-xl md:text-2xl text-gray-300 font-inter">
            Secure Authentication Solutions for the Modern Web
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8 w-[26rem] mx-auto">
            <ShinyButton/>

            <NeonButton href="/docs">
                Documentation
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><mask id="lineMdFileDocumentFilled0"><g fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path fill="#fff" fill-opacity="0" stroke-dasharray="64" stroke-dashoffset="64" d="M13.5 3l5.5 5.5v11.5c0 0.55 -0.45 1 -1 1h-12c-0.55 0 -1 -0.45 -1 -1v-16c0 -0.55 0.45 -1 1 -1Z"><animate fill="freeze" attributeName="fill-opacity" begin="0.6s" dur="0.5s" values="0;1"/><animate fill="freeze" attributeName="stroke-dashoffset" dur="0.6s" values="64;0"/></path><path fill="#000" stroke="#000" d="M14.5 3.5l0 4.5l4.5 0z" opacity="0"><set fill="freeze" attributeName="opacity" begin="0.6s" to="1"/></path><path d="M13.5 3l5.5 5.5" opacity="0"><set fill="freeze" attributeName="opacity" begin="0.6s" to="1"/></path><path stroke="#000" stroke-dasharray="12" stroke-dashoffset="12" d="M7 13h10"><animate fill="freeze" attributeName="stroke-dashoffset" begin="1.1s" dur="0.2s" values="12;0"/></path><path stroke="#000" stroke-dasharray="8" stroke-dashoffset="8" d="M7 17h7"><animate fill="freeze" attributeName="stroke-dashoffset" begin="1.3s" dur="0.2s" values="8;0"/></path></g></mask><rect width="24" height="24" fill="currentColor" mask="url(#lineMdFileDocumentFilled0)"/></svg>
            </NeonButton>
        </div>

        <h2 class="text-3xl md:text-4xl font-bold mb-4 space-y-5 ">
            <span>
                Everything you need for{" "}
            </span>

            <span class="bg-clip-text text-neon-blue bg-gradient-to-r from-primary to-secondary ">
                Authentication
            </span>
        </h2>

        <div class="flex justify-center bottom-0 left-1/2 -translate-x-1/2 animate-bounce">
            <div class="w-6 h-10 rounded-full border-2 border-neon-blue flex justify-center items-start p-1">
            <div class="w-1 h-2 bg-neon-blue rounded-full"></div>
            </div>
        </div>
    </div>
</section>