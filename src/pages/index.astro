---
import Layout from '../layouts/Layout.astro';
---

<Layout title="GuardianApi - Secure Authentication Solution">

    <div class="min-h-screen flex flex-col items-center justify-center px-4 py-24">
        <div class="text-center max-w-4xl mx-auto space-y-8 animate-fade-in">
        <h1 class="text-5xl md:text-7xl font-orbitron font-bold bg-gradient-to-r from-neon-blue to-cyber-blue text-transparent bg-clip-text">
            Guardian<span class="text-white">Api</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 font-inter">
            Secure Authentication Solutions for the Modern Web
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
            <a href="/signup" class="px-8 py-3 bg-neon-blue text-dark-blue font-bold rounded-lg hover:bg-opacity-80 transition-all duration-300 transform hover:scale-105">
            Get Started
            </a>
            <a href="/docs" class="px-8 py-3 border-2 border-neon-blue text-neon-blue rounded-lg hover:bg-neon-blue/10 transition-all duration-300">
            Documentation
            </a>
        </div>
        </div>
    </div>
</Layout>

<style>
    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }

    @keyframes fadeIn {
        from {
        opacity: 0;
        transform: translateY(20px);
        }
        to {
        opacity: 1;
        transform: translateY(0);
        }
    }
</style>